<tr>
    <td>
        {% if task.image %}
            <img src="upload/{{ task.image }}">
        {% endif %}
    </td>
    <td>
        <p class="task-name">{{ task.name }}</p>
        <p>{{ task.description }}</p>
    </td>
    <td>
        <p>{{ task.status }}</p>
    </td>
    <td>
        <p>{{ task.enddate|date('d-m-Y') }}</p>
    </td>
    <td>
        <a href="{{ path('app_task_update', {id: task.id}) }}">
            <i class="fa-solid fa-pen-to-square"></i>
        </a>
        <form action="{{ url('app_task_remove', { id: task.id }) }}" method="post">
            <input type="hidden" name="token" value="{{ csrf_token('delete-task'~task.id) }}"/>
            <button class="btn-delete" type="submit">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </form>
    </td>
</tr>